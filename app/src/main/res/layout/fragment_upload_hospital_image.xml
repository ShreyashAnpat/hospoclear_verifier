<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MultileDoctorHospital.upload_hospital_image"
    android:padding="20dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Profile and Images"
        android:textStyle="bold"

        android:textColor="@color/purple_500"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hospital_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/header_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:civ_border_width="0.4dp"
        android:src="@drawable/hospital" />
    <ImageButton
        android:id="@+id/btnEditProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/hospital_profile"
        android:background="@drawable/camara_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="105dp"
        android:src="@drawable/ic_baseline_photo_camera_24" />

    <Button
        android:id="@+id/btnAddHospitalImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospital_profile"
        android:text="Add Hospital Images"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        tools:ignore="HardcodedText"
        android:drawableEnd="@drawable/ic_baseline_add_24"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#747474"
        android:layout_below="@id/btnAddHospitalImages"
        android:layout_marginTop="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:id="@+id/recycleView2"/>
    <Button
        android:id="@+id/btnUpload"
        android:layout_below="@id/recycleView2"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        tools:ignore="HardcodedText" />

</RelativeLayout>