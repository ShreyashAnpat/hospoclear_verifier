<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddHospitalFragment">

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Choose Hospital Type"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_extra_large"
        android:fontFamily="sans-serif-condensed-medium"
        tools:ignore="HardcodedText" />

   <TableLayout
       android:id="@+id/tableLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:layout_marginTop="30dp"
       android:layout_below="@id/text">

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.cardview.widget.CardView
               android:id="@+id/singleDoctor"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               app:cardElevation="2dp"
               app:contentPadding="20dp"
               app:cardCornerRadius="20dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/doctorImg"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:src="@drawable/person"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Single Doctor"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textStyle="bold"
                       android:layout_below="@id/doctorImg"
                       android:layout_centerHorizontal="true"
                       tools:ignore="HardcodedText" />

               </RelativeLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/multipleDoctor"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               app:cardElevation="2dp"
               app:contentPadding="20dp"
               app:cardCornerRadius="20dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/doctorsImg"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:src="@drawable/group"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Multiple Doctor"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textStyle="bold"
                       android:layout_below="@id/doctorsImg"
                       android:layout_centerHorizontal="true"
                       tools:ignore="HardcodedText" />

               </RelativeLayout>

           </androidx.cardview.widget.CardView>

       </TableRow>

   </TableLayout>

    <TextView
        android:layout_below="@id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="@string/company_name"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>