<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleDoctorHospital.All_InformationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please confirm following details"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_below="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- Doctor Information --"
                    android:textAllCaps="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Name*"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="@dimen/text_size_extra_small"
                    android:layout_below="@id/text"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/phone_number_background"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualification*"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="@dimen/text_size_extra_small"
                    android:layout_below="@id/text"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/doctorQualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/phone_number_background"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience*"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="@dimen/text_size_extra_small"
                    android:layout_below="@id/text"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/doctorExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:maxLength="2"
                    android:inputType="numberDecimal"
                    android:background="@drawable/phone_number_background"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality*"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="@dimen/text_size_extra_small"
                    android:layout_below="@id/text"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/doctorSpeciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/phone_number_background"
                    android:layout_marginTop="5dp"/>


                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Submit"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>